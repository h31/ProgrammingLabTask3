<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hookahs_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardHookah"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <ImageView
            android:id="@+id/imageInCard"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rateIndicator"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="end|top"
            android:layout_margin="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            app:mrb_progressBackgroundTint="@color/yellow_rating_bar"
            app:mrb_progressTint="@color/yellow_rating_bar"
            app:mrb_secondaryProgressTint="@color/yellow_rating_bar" />

        <RelativeLayout
            android:id="@+id/rlincidecard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/hookahClubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:text="На высоте"
                android:textSize="25sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_toStartOf="@id/distanceDescription"
                android:layout_centerVertical="true"
                android:id="@+id/geoIcon"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/distanceDescription"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:text="1.0km от вас" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
