<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hookahs_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardHookah"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp">


            <ImageView
                android:id="@+id/imageInCard"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:tint="#80000000" />

            <TextView
                android:id="@+id/hookahClubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="На высоте"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:background="@color/yellow_rating_bar"
                android:text="Ad"
                android:id="@+id/adMark"
                android:textAlignment="center"
                android:textColor="@color/text_shadow" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rateIndicator"
                android:isIndicator="true"
                style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="7dp"
                app:mrb_progressBackgroundTint="@color/yellow_rating_bar"
                app:mrb_progressTint="@color/yellow_rating_bar"
                app:mrb_secondaryProgressTint="@color/yellow_rating_bar" />

            <ImageView
                android:id="@+id/geoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="2dp"
                android:layout_toStartOf="@id/distanceDescription"
                android:src="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/distanceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="10dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/metroIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_moscow_metro_logo" />

            <TextView
                android:id="@+id/metroDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/metroIcon"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
