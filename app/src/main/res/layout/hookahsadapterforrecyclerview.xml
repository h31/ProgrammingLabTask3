<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hookahs_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardHookah"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="175dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp">


        <ImageView
            android:id="@+id/imageInCard"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:tint="#80000000"
            android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/hookahClubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

               android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="На высоте"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Ad"
                android:textColor="@color/text_shadow"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:background="@color/yellow_rating_bar"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rateIndicator"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            app:mrb_progressBackgroundTint="@color/yellow_rating_bar"
            app:mrb_progressTint="@color/yellow_rating_bar"
            app:mrb_secondaryProgressTint="@color/yellow_rating_bar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_toStartOf="@id/distanceDescription"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:id="@+id/geoIcon"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/distanceDescription"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:text="1.0km от вас" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_moscow_metro_logo"
                android:id="@+id/metroIcon"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="7dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/metroIcon"
                android:layout_marginStart="4dp"
                android:textSize="15dp"
                android:id="@+id/metroDescription"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="7dp"
                android:layout_alignParentBottom="true"
                android:text=""/>
        </RelativeLayout>

        <!--<RelativeLayout
            android:id="@+id/rlincidecard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/AhookahClubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:text="На высоте"
                android:textSize="25sp" />
        </RelativeLayout> !-->
    </android.support.v7.widget.CardView>
</LinearLayout>
