<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.popov.gohookah.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:menu="true">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/Addhookahactivityheader"
        app:layout_constraintBottom_toTopOf="@+id/hookahClubName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/Country"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toTopOf="@+id/City"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hookahClubName" />

    <AutoCompleteTextView
        android:id="@+id/City"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent"
        android:hint="Город"
        app:layout_constraintBottom_toTopOf="@+id/MetroStation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Country" />

    <EditText
        android:id="@+id/Street"
        android:layout_width="261dp"
        android:layout_height="30dp"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent"
        android:hint="Название улицы"
        app:layout_constraintBaseline_toBaselineOf="@+id/HouseNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/HouseNumber"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="22dp"
        android:background="@android:color/transparent"
        android:hint="№"
        app:layout_constraintBottom_toTopOf="@+id/DoneButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MetroStation" />

    <EditText
        android:id="@+id/hookahClubName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent"
        android:hint="Название кальянного клуба"
        app:layout_constraintBottom_toTopOf="@+id/Country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/DoneButton"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginBottom="26dp"
        android:hint="Добавить"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HouseNumber" />

    <AutoCompleteTextView
        android:id="@+id/MetroStation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent"
        android:hint="Станция метро"
        app:layout_constraintBottom_toTopOf="@+id/HouseNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/City" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:gravity="center"
        android:text="Добавьте кальянный клуб при помощи формы сверху."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DoneButton" />


</android.support.constraint.ConstraintLayout>