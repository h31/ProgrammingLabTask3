<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/contacts"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_local_phone_black_24dp" />

        <TextView
            android:id="@+id/phoneField"
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/phone_icon"
            android:gravity="center"
            android:text="+7 999 1711 999"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:textStyle="normal" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/vkIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginBottom="@id/phoneField"
            android:layout_toEndOf="@id/phoneField"
            android:src="@drawable/ic_if_vk_"
            android:background="@color/text_shadow_white"
            style="@style/SocialIcon"/>

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_shadow_white"
            style="@style/SocialIcon"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/vkIcon"
            android:src="@drawable/ic_if_instagram_834707" />
    </RelativeLayout>

